---
import { getLangFromUrl, useTranslations } from '../i18n/index';
import { getLocalizedPath } from '../i18n/utils';
import { siteConfig } from '../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">üè†</span>
          </div>
          <div>
            <h3 class="text-xl font-display font-bold maple-accent">
              {siteConfig.company.name[lang]}
            </h3>
            <p class="text-primary-400 text-sm">
              {t('footer.tagline')}
            </p>
          </div>
        </div>
        
        <p class="text-gray-300 mb-6 max-w-md">
          {lang === 'fr' 
            ? `Une entreprise familiale qu√©b√©coise fi√®re de servir la communaut√© depuis ${siteConfig.company.founded}. Nous construisons plus que des b√¢timents, nous b√¢tissons des relations durables.`
            : `A Quebec family business proudly serving the community since ${siteConfig.company.founded}. We build more than buildings, we build lasting relationships.`
          }
        </p>

        <!-- Contact Info -->
        <div class="space-y-3 text-sm text-gray-300">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>{siteConfig.company.contact.phone}</span>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${siteConfig.company.contact.email}`} class="hover:text-primary-400 transition-colors">
              {siteConfig.company.contact.email}
            </a>
          </div>
          
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{siteConfig.company.contact.address[lang]}</span>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-display font-semibold text-lg mb-4">{t('footer.services')}</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          {siteConfig.services.slice(0, 4).map((service) => (
            <li>
              <a 
                href={getLocalizedPath(`/services#${service.id}`, lang)} 
                class="hover:text-primary-400 transition-colors flex items-center space-x-2"
              >
                <span>{service.icon}</span>
                <span>{service.title[lang]}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-display font-semibold text-lg mb-4">{t('footer.company')}</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          <li>
            <a href={getLocalizedPath('/about', lang)} class="hover:text-primary-400 transition-colors">
              {t('nav.about')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/portfolio', lang)} class="hover:text-primary-400 transition-colors">
              {t('nav.portfolio')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/contact', lang)} class="hover:text-primary-400 transition-colors">
              {t('nav.contact')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/quote', lang)} class="hover:text-primary-400 transition-colors">
              {t('nav.quote')}
            </a>
          </li>
        </ul>
        
        <!-- Business Hours -->
        <div class="mt-6">
          <h5 class="font-medium text-white mb-2">
            {lang === 'fr' ? 'Heures d\'ouverture' : 'Business Hours'}
          </h5>
          <p class="text-xs text-gray-400">
            {siteConfig.company.hours[lang]}
          </p>
        </div>
      </div>
    </div>

    <!-- Service Areas -->
    <div class="border-t border-gray-800 pt-8 mt-12">
      <div class="text-center mb-6">
        <h4 class="font-display font-semibold text-lg mb-2">
          {lang === 'fr' ? 'Zones de service' : 'Service Areas'}
        </h4>
        <div class="flex flex-wrap justify-center gap-2">
          {siteConfig.company.serviceAreas[lang].map((area, index) => (
            <span class="px-3 py-1 bg-primary-900/30 text-primary-300 rounded-full text-sm">
              {area}
            </span>
          ))}
        </div>
      </div>
    </div>

    <!-- Social Links -->
    <div class="border-t border-gray-800 pt-8 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex items-center space-x-6">
          <a 
            href={siteConfig.company.social.facebook} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-primary-400 transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          
          <a 
            href={siteConfig.company.social.instagram} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-primary-400 transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.621 5.367 11.988 11.988 11.988s11.987-5.367 11.987-11.988C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348zm7.718 0c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348z"/>
            </svg>
          </a>
          
          <a 
            href={siteConfig.company.social.linkedin} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-primary-400 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>

        <!-- Certifications -->
        <div class="flex items-center space-x-4 text-xs text-gray-400">
          {siteConfig.certifications.map((cert) => (
            <div class="flex items-center space-x-1">
              <span class="w-2 h-2 bg-maple-600 rounded-full"></span>
              <span>{cert.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400 space-y-2 md:space-y-0">
        <div>
          ¬© {currentYear} {siteConfig.company.name[lang]}. {lang === 'fr' ? 'Tous droits r√©serv√©s.' : 'All rights reserved.'}
        </div>
        
        <!-- Jeffrey Z. Attribution -->
        <div class="flex items-center space-x-2">
          <span>{t('footer.built')}</span>
          <a 
            href="https://jeffzalischi.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-primary-400 hover:text-primary-300 font-medium transition-colors"
          >
            Jeffrey Z.
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>