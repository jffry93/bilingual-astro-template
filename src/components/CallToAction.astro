---
import { getLangFromUrl, useTranslations } from '../i18n/index';
import { getLocalizedPath } from '../i18n/utils';
import { siteConfig } from '../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-700 text-white relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"60\" height=\"60\" viewBox=\"0 0 60 60\"><rect width=\"60\" height=\"60\" fill=\"%23ffffff\"/><path d=\"M36 18.01L36 0h12v18.01h12V60H36V42H24v18H12V18.01h12V0h12v18.01z\" fill=\"%23ffffff\" opacity=\"0.1\"/></svg>')"></div>
  </div>

  <!-- Floating elements -->
  <div class="absolute top-20 left-10 w-20 h-20 bg-white/10 rounded-full animate-float"></div>
  <div class="absolute bottom-20 right-10 w-16 h-16 bg-white/10 rounded-full animate-float" style="animation-delay: -1s;"></div>
  <div class="absolute top-1/2 right-20 w-12 h-12 bg-white/5 rounded-full animate-float" style="animation-delay: -2s;"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center animate-on-scroll">
      <!-- Canadian pride badge -->
      <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full mb-8">
        <span class="text-2xl mr-2">üçÅ</span>
        <span class="text-sm font-medium">
          {lang === 'fr' 
            ? 'Entreprise familiale qu√©b√©coise depuis ' + siteConfig.company.founded
            : 'Quebec family business since ' + siteConfig.company.founded
          }
        </span>
      </div>

      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-6">
        {lang === 'fr' 
          ? 'Pr√™t √† concr√©tiser votre projet?'
          : 'Ready to bring your project to life?'
        }
      </h2>
      
      <p class="text-xl text-white/90 mb-12 max-w-3xl mx-auto leading-relaxed">
        {lang === 'fr' 
          ? 'Contactez-nous d√®s aujourd\'hui pour une consultation gratuite et d√©couvrez pourquoi tant de familles qu√©b√©coises nous font confiance depuis plus de 25 ans.'
          : 'Contact us today for a free consultation and discover why so many Quebec families have trusted us for over 25 years.'
        }
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <a
          href={getLocalizedPath('/contact', lang)}
          class="bg-white text-primary-700 hover:bg-gray-50 font-semibold px-8 py-4 rounded-lg text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          {t('hero.cta')}
        </a>
        
        <a
          href={`tel:${siteConfig.company.contact.phone}`}
          class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary-700 font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-300 flex items-center justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {siteConfig.company.contact.phone}
        </a>
      </div>

      <!-- Contact methods -->
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center animate-on-scroll" style="animation-delay: 0.1s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="font-semibold mb-2">
            {lang === 'fr' ? 'Appelez-nous' : 'Call Us'}
          </h3>
          <p class="text-white/80 text-sm">
            {siteConfig.company.contact.phone}
          </p>
        </div>

        <div class="text-center animate-on-scroll" style="animation-delay: 0.2s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-semibold mb-2">
            {lang === 'fr' ? '√âcrivez-nous' : 'Email Us'}
          </h3>
          <p class="text-white/80 text-sm">
            {siteConfig.company.contact.email}
          </p>
        </div>

        <div class="text-center animate-on-scroll" style="animation-delay: 0.3s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold mb-2">
            {lang === 'fr' ? 'Visitez-nous' : 'Visit Us'}
          </h3>
          <p class="text-white/80 text-sm">
            {siteConfig.company.serviceAreas[lang].join(', ')}
          </p>
        </div>
      </div>

      <!-- Final message -->
      <div class="mt-16 p-8 bg-white/10 backdrop-blur-sm rounded-2xl max-w-2xl mx-auto animate-on-scroll">
        <p class="text-white/90 italic">
          "{lang === 'fr' 
            ? 'Nous ne construisons pas seulement des b√¢timents, nous b√¢tissons des relations durables avec nos clients.'
            : 'We don\'t just build structures, we build lasting relationships with our clients.'
          }"
        </p>
        <p class="text-white/70 text-sm mt-2">
          - {siteConfig.company.owner[lang]}
        </p>
      </div>
    </div>
  </div>
</section>