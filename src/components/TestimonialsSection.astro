---
import { getLangFromUrl, useTranslations } from '../i18n/index';
import { siteConfig } from '../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section bg-gradient-to-br from-gray-50 to-primary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="section-header animate-on-scroll">
      <h2 class="section-title">
        {lang === 'fr' ? 'Ce que disent nos clients' : 'What our clients say'}
      </h2>
      <p class="section-subtitle">
        {lang === 'fr' 
          ? 'La satisfaction de nos clients est notre plus grande fierté'
          : 'Our clients\' satisfaction is our greatest pride'
        }
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8 mb-16">
      {siteConfig.testimonials.map((testimonial, index) => (
        <div class="bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Stars -->
          <div class="flex space-x-1 mb-6">
            {[...Array(testimonial.rating)].map((_, i) => (
              <svg key={i} class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-700 mb-6 leading-relaxed italic">
            "{testimonial.text[lang]}"
          </blockquote>

          <!-- Client Info -->
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-secondary-500 rounded-full flex items-center justify-center text-white font-semibold mr-4">
              {testimonial.name.split(' ').map(n => n[0]).join('')}
            </div>
            <div>
              <div class="font-semibold text-gray-900">
                {testimonial.name}
              </div>
              <div class="text-sm text-gray-500">
                {testimonial.location[lang]}
              </div>
            </div>
          </div>

          <!-- Project Reference -->
          {testimonial.project && (
            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="text-xs text-primary-600 font-medium">
                {lang === 'fr' ? 'Projet:' : 'Project:'} {testimonial.project}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- Trust Indicators -->
    <div class="bg-white rounded-2xl p-8 lg:p-12 shadow-md animate-on-scroll">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl lg:text-4xl font-bold text-primary-600 mb-2">500+</div>
          <div class="text-sm text-gray-600 font-medium">
            {lang === 'fr' ? 'Projets réalisés' : 'Completed Projects'}
          </div>
        </div>
        <div>
          <div class="text-3xl lg:text-4xl font-bold text-primary-600 mb-2">98%</div>
          <div class="text-sm text-gray-600 font-medium">
            {lang === 'fr' ? 'Clients satisfaits' : 'Satisfied Clients'}
          </div>
        </div>
        <div>
          <div class="text-3xl lg:text-4xl font-bold text-primary-600 mb-2">{siteConfig.company.experience}</div>
          <div class="text-sm text-gray-600 font-medium">
            {lang === 'fr' ? 'Années d\'expérience' : 'Years Experience'}
          </div>
        </div>
        <div>
          <div class="text-3xl lg:text-4xl font-bold text-primary-600 mb-2">3</div>
          <div class="text-sm text-gray-600 font-medium">
            {lang === 'fr' ? 'Générations' : 'Generations'}
          </div>
        </div>
      </div>
    </div>

    <!-- Google Reviews CTA -->
    <div class="text-center mt-12 animate-on-scroll">
      <div class="inline-flex items-center bg-white rounded-full px-6 py-3 shadow-md hover:shadow-lg transition-shadow">
        <svg class="w-6 h-6 mr-3" viewBox="0 0 24 24" fill="currentColor">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <div class="text-left">
          <div class="font-semibold text-gray-900">4.9/5</div>
          <div class="text-sm text-gray-500">
            {lang === 'fr' ? 'sur Google Reviews' : 'on Google Reviews'}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>