---
import { getLangFromUrl, useTranslations } from '../i18n/index';
import { getLocalizedPath } from '../i18n/utils';
import { siteConfig } from '../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-primary-100 to-secondary-100"></div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"60\" height=\"60\" viewBox=\"0 0 60 60\"><rect width=\"60\" height=\"60\" fill=\"%23ffffff\"/><path d=\"M54 60V28h-4V0H0v32h-4v28h58z\" fill=\"%23000000\" opacity=\"0.03\"/></svg>')"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left animate-on-scroll">
        <!-- Canada Flag Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-md mb-8">
          <span class="text-2xl mr-2">üçÅ</span>
          <span class="text-sm font-medium text-primary-700">
            {lang === 'fr' ? 'Fi√®rement qu√©b√©cois depuis' : 'Proudly Quebec since'} {siteConfig.company.founded}
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 mb-6 leading-tight">
          {t('hero.title')}
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 max-w-2xl lg:max-w-none">
          {t('hero.subtitle')}
        </p>

        <!-- Features -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-10">
          {siteConfig.hero.features.map((feature) => (
            <div class="flex items-center bg-white/60 backdrop-blur-sm px-4 py-2 rounded-full">
              <svg class="w-5 h-5 text-maple-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm font-medium text-gray-700">{feature[lang]}</span>
            </div>
          ))}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href={getLocalizedPath('/contact', lang)}
            class="btn-primary text-lg px-8 py-4 shadow-construction hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            {t('hero.cta')}
          </a>
          
          <a
            href={getLocalizedPath('/portfolio', lang)}
            class="btn-outline text-lg px-8 py-4 hover:shadow-md transform hover:-translate-y-1 transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            {t('hero.contact')}
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-16 pt-8 border-t border-primary-200">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600">{siteConfig.company.experience}</div>
            <div class="text-sm text-gray-600 font-medium">
              {lang === 'fr' ? 'Ann√©es d\'exp√©rience' : 'Years Experience'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600">500+</div>
            <div class="text-sm text-gray-600 font-medium">
              {lang === 'fr' ? 'Projets r√©alis√©s' : 'Projects Completed'}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600">100%</div>
            <div class="text-sm text-gray-600 font-medium">
              {lang === 'fr' ? 'Clients satisfaits' : 'Happy Clients'}
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Image/Illustration -->
      <div class="relative animate-on-scroll">
        <div class="relative z-10">
          <!-- Placeholder for hero image - replace with actual construction site photo -->
          <div class="aspect-[4/5] bg-gradient-to-br from-primary-300 to-secondary-400 rounded-2xl shadow-2xl overflow-hidden relative">
            <!-- Image placeholder - you would replace this with actual hero image -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="text-6xl mb-4">üèóÔ∏è</div>
                <p class="text-lg font-medium opacity-90">
                  {lang === 'fr' ? 'Photo de chantier' : 'Construction Site Photo'}
                </p>
                <p class="text-sm opacity-75">
                  {lang === 'fr' ? '√Ä remplacer par une vraie photo' : 'Replace with actual photo'}
                </p>
              </div>
            </div>
            
            <!-- Floating Elements -->
            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-2 rounded-full shadow-md">
              <div class="flex items-center text-sm font-medium text-gray-700">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
                {lang === 'fr' ? 'En cours' : 'In Progress'}
              </div>
            </div>
            
            <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-sm px-4 py-3 rounded-xl shadow-md">
              <div class="text-xs text-gray-500 mb-1">
                {lang === 'fr' ? 'Projet r√©cent' : 'Recent Project'}
              </div>
              <div class="font-semibold text-gray-900">
                {lang === 'fr' ? 'Maison familiale' : 'Family Home'}
              </div>
              <div class="text-sm text-primary-600">Sainte-Foy, QC</div>
            </div>
          </div>
        </div>

        <!-- Background decoration -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary-200 rounded-full opacity-60 animate-float"></div>
        <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-secondary-200 rounded-full opacity-40 animate-float" style="animation-delay: -2s;"></div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>