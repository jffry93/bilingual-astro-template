---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/index';
import { siteConfig } from '../../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={lang === 'fr' ? 'Contactez notre équipe pour discuter de votre projet de construction. Devis gratuit et consultation sans engagement.' : 'Contact our team to discuss your construction project. Free quotes and no-obligation consultation.'}
>
  <section class="section bg-construction">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="section-header animate-on-scroll">
        <h1 class="section-title">{t('contact.title')}</h1>
        <p class="section-subtitle">
          {t('contact.subtitle')}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Information -->
        <div class="animate-on-scroll">
          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
            <h2 class="text-2xl font-display font-bold text-gray-900 mb-8">
              {lang === 'fr' ? 'Informations de contact' : 'Contact Information'}
            </h2>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">
                    {lang === 'fr' ? 'Téléphone' : 'Phone'}
                  </h3>
                  <a href={`tel:${siteConfig.company.contact.phone}`} class="text-primary-600 hover:text-primary-700 transition-colors">
                    {siteConfig.company.contact.phone}
                  </a>
                  <p class="text-sm text-gray-500 mt-1">
                    {siteConfig.company.hours[lang]}
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">
                    {lang === 'fr' ? 'Courriel' : 'Email'}
                  </h3>
                  <a href={`mailto:${siteConfig.company.contact.email}`} class="text-primary-600 hover:text-primary-700 transition-colors">
                    {siteConfig.company.contact.email}
                  </a>
                  <p class="text-sm text-gray-500 mt-1">
                    {lang === 'fr' ? 'Réponse sous 24h' : 'Response within 24h'}
                  </p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">
                    {lang === 'fr' ? 'Zones de service' : 'Service Areas'}
                  </h3>
                  <div class="text-gray-600">
                    {siteConfig.company.serviceAreas[lang].join(', ')}
                  </div>
                </div>
              </div>
            </div>

            <!-- Trust Indicators -->
            <div class="mt-12 pt-8 border-t border-gray-100">
              <h3 class="font-semibold text-gray-900 mb-4">
                {lang === 'fr' ? 'Certifications' : 'Certifications'}
              </h3>
              <div class="space-y-2">
                {siteConfig.certifications.map((cert) => (
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="font-medium mr-2">{cert.name}</span>
                    {cert.number && (
                      <span class="text-gray-400">#{cert.number}</span>
                    )}
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="animate-on-scroll">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>