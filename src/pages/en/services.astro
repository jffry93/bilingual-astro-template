---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/index';
import { getLocalizedPath } from '../../i18n/utils';
import { siteConfig } from '../../config.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('services.title')}
  description={lang === 'fr' ? 'Services complets de plâtrage intérieur et extérieur. Plâtre vénitien, stucco, restauration patrimoniale et plus.' : 'Complete interior and exterior plastering services. Venetian plaster, stucco, heritage restoration and more.'}
>
  <section class="section bg-construction">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="section-header animate-on-scroll">
        <h1 class="section-title">{t('services.title')}</h1>
        <p class="section-subtitle">
          {t('services.subtitle')}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        {siteConfig.services.map((service, index) => (
          <div id={service.id} class="card group overflow-hidden animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
            <div class="p-8 lg:p-12">
              <div class="text-6xl mb-6 group-hover:scale-110 transition-transform duration-300">
                {service.icon}
              </div>

              <h2 class="text-2xl lg:text-3xl font-display font-bold text-gray-900 mb-4">
                {service.title[lang]}
              </h2>

              <p class="text-gray-600 mb-6 leading-relaxed text-lg">
                {service.description[lang]}
              </p>

              <div class="grid sm:grid-cols-2 gap-4 mb-8">
                {service.features[lang].map((feature) => (
                  <div class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-primary-600 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="font-medium">{feature}</span>
                  </div>
                ))}
              </div>

              <div class="flex flex-col sm:flex-row gap-4">
                <a
                  href={getLocalizedPath('/contact', lang)}
                  class="btn-primary flex-1 text-center"
                >
                  {lang === 'fr' ? 'Demander un devis' : 'Get a quote'}
                </a>
                <a
                  href={getLocalizedPath('/portfolio', lang)}
                  class="btn-outline flex-1 text-center"
                >
                  {lang === 'fr' ? 'Voir nos projets' : 'View projects'}
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Process Overview -->
      <div class="mt-24 bg-white rounded-2xl p-8 lg:p-12 shadow-lg animate-on-scroll">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-display font-bold text-gray-900 mb-4">
            {lang === 'fr' ? 'Comment nous procédons' : 'How we work'}
          </h2>
          <p class="text-xl text-gray-600">
            {lang === 'fr'
              ? 'Un processus éprouvé pour garantir la réussite de votre projet'
              : 'A proven process to ensure your project success'
            }
          </p>
        </div>

        <div class="grid md:grid-cols-5 gap-8">
          {siteConfig.process.map((step, index) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-4">
                {step.step}
              </div>
              <div class="text-4xl mb-4">{step.icon}</div>
              <h3 class="font-display font-semibold text-gray-900 mb-2">
                {step.title[lang]}
              </h3>
              <p class="text-sm text-gray-600">
                {step.description[lang]}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA Section -->
      <div class="mt-24 text-center animate-on-scroll">
        <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl p-12 text-white">
          <h2 class="text-3xl font-display font-bold mb-4">
            {lang === 'fr'
              ? 'Prêt à commencer votre projet?'
              : 'Ready to start your project?'
            }
          </h2>
          <p class="text-xl mb-8 text-white/90">
            {lang === 'fr'
              ? 'Contactez-nous pour une consultation gratuite et un devis personnalisé.'
              : 'Contact us for a free consultation and personalized quote.'
            }
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={getLocalizedPath('/contact', lang)}
              class="bg-white text-primary-700 hover:bg-gray-50 font-semibold px-8 py-4 rounded-lg text-lg transition-colors"
            >
              {lang === 'fr' ? 'Obtenir un devis gratuit' : 'Get free quote'}
            </a>
            <a
              href={`tel:${siteConfig.company.contact.phone}`}
              class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary-700 font-semibold px-8 py-4 rounded-lg text-lg transition-colors"
            >
              {siteConfig.company.contact.phone}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
